extends layout 

block content 
    h1= movie.title

    div(class='d-flex')
        p(class='info-movie-m') #{movie.year} -
        p(class='info-movie-m') #{movie.duration} -
        p(class='info-movie-m') #[strong IMDb Rating:]    #{movie.imdb}#[span(class='imdb-rate') /10]
    
    div(class='synopsis-section')
        p #{movie.synopsis}
    
    div(class='dir-genre-link')
        ul(class='genre-link d-flex')
          each genre in movie.genre
            li
              a(href=genre.url) #{genre.name}

        p(class='') #[Strong Director:]
            a(href=movie.director.url)    #{movie.director.name}
